@model IEnumerable<WebApplication1.Models.NHANVIEN>

@{
    ViewBag.Title = "Danh sách nhân viên";
}
<link href="~/Content/Trang Trí prj2/indexNhanVien.css" rel="stylesheet" type="text/css" />

<h2>Danh sách nhân viên</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn-create" })
    <style>
        .btn-action {
            display: inline-block; /* Để các nút hiển thị bên cạnh nhau */
            padding: 5px 5px; /* Khoảng cách bên trong nút */
            margin: 5px; /* Khoảng cách giữa các nút */
            text-decoration: none; /* Bỏ gạch chân */
            color: #fff; /* Màu chữ trắng */
            border-radius: 5px; /* Bo góc nút */
            transition: background-color 0.3s; /* Hiệu ứng chuyển màu nền */
        }

            /* Kiểu cho nút Edit */
            .btn-action:nth-child(1) {
                background-color: sandybrown; 
            }

            /* Kiểu cho nút Details */
            .btn-action:nth-child(2) {
                background-color: white;
            }

            /* Kiểu cho nút Delete */
            .btn-action.delete {
                background-color: purple; 
            }

            /* Hiệu ứng khi hover */
            .btn-action:hover {
                opacity: 0.8; /* Giảm độ mờ khi di chuột vào */
            }
    </style>
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Ho_Ten)</th>
        <th>@Html.DisplayNameFor(model => model.Ngay_Sinh)</th>
        <th>@Html.DisplayNameFor(model => model.Gioi_Tinh)</th>
        <th>@Html.DisplayNameFor(model => model.SDT)</th>
        <th>@Html.DisplayNameFor(model => model.Dia_Chi)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>@Html.DisplayNameFor(model => model.Ngay_Lam)</th>
        <th>@Html.DisplayNameFor(model => model.CHUCVU.Ten_CV)</th>
        <th>@Html.DisplayNameFor(model => model.PHONGBAN.Ten_Phong)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Ho_Ten)</td>
            <td>@Html.DisplayFor(modelItem => item.Ngay_Sinh)</td>
            <td>@(item.Gioi_Tinh?"Nam":"Nữ")</td>
            <td>@Html.DisplayFor(modelItem => item.SDT)</td>
            <td>@Html.DisplayFor(modelItem => item.Dia_Chi)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.Ngay_Lam)</td>
            <td>@Html.DisplayFor(modelItem => item.CHUCVU.Ten_CV)</td>
            <td>@Html.DisplayFor(modelItem => item.PHONGBAN.Ten_Phong)</td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Ma_NV.Trim() }, new { @class = "btn-action" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Ma_NV.Trim() }, new { @class = "btn-action" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Ma_NV.Trim() }, new { @class = "btn-action delete" })
            </td>
        </tr>
    }
</table>
